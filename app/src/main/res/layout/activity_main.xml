<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:maxLines="1"
            android:textColor="@color/text"
            android:background="@color/expression"
            app:autoSizeTextType="uniform"
            android:text=""
            android:textSize="0sp"
            android:textAlignment="viewEnd" />


        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1.2"
            android:textColor="@color/text"
            android:background="@color/expression"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            android:text=""
            android:textAlignment="viewEnd"
            android:textSize="0sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDEL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonFunc"
                android:textColor="@color/black"
                android:text="DEL"
                android:maxLines="1"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btnLeftBracket"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text="("
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btnRightBracket"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text=")"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonOp"
                android:layout_weight="1"
                android:text="รท"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text="7"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text="8"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonNum"
                android:text="9"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>
            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonOp"
                android:layout_weight="1"
                android:text="ร"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text="4"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text="5"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text="6"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/buttonOp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/buttonNum"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text="2"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text= "3"
                app:autoSizeMaxTextSize="40sp"
                android:textSize="0sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonOp"
                android:text="+"
                app:autoSizeMaxTextSize="40sp"
                android:textSize="0sp"
                app:autoSizeTextType="uniform"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonNum"
                android:text="0"
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:backgroundTint="@color/buttonNum"
                android:layout_weight="1"
                android:text="."
                android:textSize="0sp"
                app:autoSizeMaxTextSize="40sp"
                app:autoSizeTextType="uniform"/>

            <Button
                android:id="@+id/btnEqualTo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/buttonFunc"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:text="="
                android:textColor="@color/black"
                android:textSize="0sp"
                app:autoSizeMaxTextSize= "40sp"
                app:autoSizeTextType="uniform"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>